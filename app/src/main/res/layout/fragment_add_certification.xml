<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Certification"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/certificationNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Certification Name"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/certificationDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date Obtained (e.g., 2024-01-01)"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/certificationAgencyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Issuing Agency"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/saveCertificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Certification"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/buttonBackgroundColor"
        android:textColor="@color/buttonTextColor"/>

</LinearLayout>
