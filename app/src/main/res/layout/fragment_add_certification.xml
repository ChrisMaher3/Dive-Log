<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/organizationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Organization" />

    <EditText
        android:id="@+id/yearEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Year" />

    <EditText
        android:id="@+id/certificationNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Certification Name" />

    <ImageView
        android:id="@+id/certificationImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="#EEEEEE" />

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image" />

    <Button
        android:id="@+id/addCertificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Certification" />
</LinearLayout>
