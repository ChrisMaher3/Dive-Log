<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/organizationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Organization Name" />

    <EditText
        android:id="@+id/yearEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Year Obtained"
        android:inputType="number" />

    <EditText
        android:id="@+id/certificationNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Certification Name" />

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image" />

    <ImageView
        android:id="@+id/certificationImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/certification_image" />

    <Button
        android:id="@+id/addCertificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Certification"
        android:layout_marginTop="16dp" />
</LinearLayout>
