<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/diveLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter dive location" />

    <EditText
        android:id="@+id/maxDepth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Max Depth (m)" />

    <EditText
        android:id="@+id/diveDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dive Duration (min)" />

    <Button
        android:id="@+id/saveDiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Dive" />
</LinearLayout>
