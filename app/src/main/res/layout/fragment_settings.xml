<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <!-- Settings Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settingsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryColor"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Unit Settings Section -->
            <TextView
                android:id="@+id/unit_settings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Settings"
                android:textSize="18sp"
                android:textColor="@color/textColor"
                android:layout_marginBottom="8dp"/>

            <!-- Meters / Feet Toggle -->
            <Switch
                android:id="@+id/unit_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meters / Feet"
                android:layout_marginBottom="8dp"/>

            <!-- Celsius / Fahrenheit Toggle -->
            <Switch
                android:id="@+id/temp_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celsius / Fahrenheit"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Theme Settings Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/themeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryColor"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/settingsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Theme Label -->
            <TextView
                android:id="@+id/theme_settings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme Settings"
                android:textSize="18sp"
                android:textColor="@color/textColor"
                android:layout_marginBottom="8dp"/>

            <!-- Light / Dark Theme Radio Buttons -->
            <RadioGroup
                android:id="@+id/theme_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <RadioButton
                    android:id="@+id/light_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/dark_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark"/>
            </RadioGroup>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Data Transfer Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dataTransferCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryColor"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/themeCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Transfer Data Label -->
            <TextView
                android:id="@+id/transfer_data_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Transfer"
                android:textSize="18sp"
                android:textColor="@color/textColor"
                android:layout_marginBottom="8dp"/>

            <!-- Transfer Data Button -->
            <Button
                android:id="@+id/transfer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer Data"
                android:textColor="@color/buttonTextColor"
                android:backgroundTint="@color/accentColor"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
